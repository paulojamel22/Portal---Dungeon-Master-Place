@model PortalDMPlace.Models.Noticia
@{
    ViewData["Title"] = Model.Titulo;
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <div class="mb-4">
                <a asp-controller="Desafio" asp-action="Index" class="text-danger text-decoration-none small fw-bold">
                    <i class="bi bi-chevron-left"></i> VOLTAR PARA O DESAFIO
                </a>
            </div>

            <article class="card bg-dark text-light border-0 shadow-lg overflow-hidden" style="border-radius: 20px;">
                
                @* Banner de Capa Brutal *@
                <div class="position-relative">
                    @{
                        var imgSrc = !string.IsNullOrEmpty(Model.ImagemUrl) ? Model.ImagemUrl : "/img/default.png";
                    }
                    <img src="@imgSrc" class="img-fluid w-100" alt="@Model.Titulo" 
                         style="max-height: 500px; object-fit: cover; filter: sepia(20%) contrast(1.1) brightness(0.8);">
                    
                    <div class="position-absolute bottom-0 start-0 w-100 p-4 bg-gradient-blood">
                        <span class="badge bg-danger text-white px-3 py-2 mb-2">@Model.Categoria</span>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <header class="text-center mb-5">
                        <h1 class="display-4 fw-bold text-danger mb-3" style="text-shadow: 0 0 15px rgba(220, 53, 69, 0.3);">@Model.Titulo</h1>
                        <div class="d-flex justify-content-center align-items-center text-muted gap-3 small">
                            <span><i class="bi bi-shield-fill text-danger me-1"></i> @Model.Autor</span>
                            <span class="vr"></span>
                            <span><i class="bi bi-clock-history me-1"></i> @Model.DataPublicacao.ToString("dd/MM/yyyy HH:mm")</span>
                            <span class="vr"></span>
                            <span class="text-danger fw-bold">@Model.Campanha?.Name</span>
                        </div>
                    </header>

                    <hr class="border-danger opacity-25 mb-5">

                    <div class="news-content-blood fs-5 px-md-4">
                        @Html.Raw(Model.Conteudo)
                    </div>

                    <footer class="mt-5 pt-5 border-top border-danger border-opacity-10 text-center">
                        <p class="text-muted italic small">Este relato foi selado com o sangue dos combatentes.</p>
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="#" class="btn btn-sm btn-outline-danger" onclick="copyUrl()">
                                <i class="bi bi-share-fill"></i> Espalhar o Rumor
                            </a>
                        </div>
                    </footer>
                </div>
            </article>
        </div>
    </div>
</div>

<style>
    /* Estilos Viscerais para o Conteúdo */
    .news-content-blood {
        line-height: 1.8;
        color: #d0d0d0;
    }
    .news-content-blood p { margin-bottom: 1.8rem; }
    
    .news-content-blood h2, .news-content-blood h3 { 
        color: #dc3545; 
        margin-top: 2.5rem; 
        margin-bottom: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .news-content-blood img { 
        max-width: 100%; 
        height: auto; 
        border-radius: 8px; 
        margin: 2rem 0;
        border: 1px solid rgba(220, 53, 69, 0.3);
        box-shadow: 0 0 25px rgba(0,0,0,0.7);
    }
    
    .news-content-blood blockquote {
        background: rgba(220, 53, 69, 0.05);
        border-left: 5px solid #dc3545;
        padding: 1.5rem 2rem;
        margin: 2rem 0;
        font-style: italic;
        color: #f8d7da;
    }

    .bg-gradient-blood {
        background: linear-gradient(transparent, rgba(0,0,0,0.9));
    }
</style>

<script>
    function copyUrl() {
        navigator.clipboard.writeText(window.location.href);
        alert("Link do relato de sangue copiado!");
    }
</script>