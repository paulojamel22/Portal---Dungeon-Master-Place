@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Painel do GM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #1c1c1c;
            color: #f1f1f1;
            margin: 0;
            font-family: "Segoe UI", sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 230px;
            background-color: #121212;
            padding-top: 60px;
            border-right: 1px solid #333;
        }

            .sidebar a {
                display: block;
                color: #bbb;
                padding: 12px 20px;
                text-decoration: none;
                transition: 0.2s;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #ffc107;
                    color: #000;
                }

        .topbar {
            position: fixed;
            top: 0;
            left: 230px;
            right: 0;
            height: 60px;
            background-color: #202020;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            border-bottom: 1px solid #333;
            z-index: 1000;
        }

        .main-content {
            margin-left: 230px;
            margin-top: 60px;
            padding: 25px;
        }

        .logout-btn {
            color: #f1f1f1;
            text-decoration: none;
        }

            .logout-btn:hover {
                color: #dc3545;
            }

        h1, h2, h3 {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a asp-controller="Admin" asp-action="Index" class="active"><i class="bi bi-speedometer2 me-2"></i>Painel</a>
        <a asp-controller="Admin" asp-action="Campanhas"><i class="bi bi-bookmark-star me-2"></i>Campanhas</a>
        @* <a href="/Admin/Usuarios"><i class="bi bi-people me-2"></i>Usuários</a> *@
        <hr style="border-color: #333;">
        <a asp-controller="Admin" asp-action="Logout" class="text-danger"><i class="bi bi-box-arrow-right me-2"></i>Sair</a>
    </div>

    <div class="topbar">
        <h5 class="m-0 text-warning">Painel do GM</h5>
        <div>
            @if(HttpContextAccessor?.HttpContext?.Session?.GetInt32("Campanha") == 1)
            {
                <span>Ecos de Aetheria</span>
            }
            @if(HttpContextAccessor?.HttpContext?.Session?.GetInt32("Campanha") == 2)
            {
                <span>Desafio de Sangue</span>
            }
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
