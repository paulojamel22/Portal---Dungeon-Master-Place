@using PortalDMPlace.Functions
@using PortalDMPlace.Enumerators
@inject IHttpContextAccessor HttpContextAccessor
@inject HelpersFunctions Helpers
@inject AccountObject AccountObject
@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    
    // Pegamos o ID da campanha que o mestre está "focado" via sessão
    var sessaoId = HttpContextAccessor?.HttpContext?.Session.GetInt32("CampanhaId");
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DM Control</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --sidebar-width: 250px;
            --topbar-height: 70px;
            --accent-color: #ffc107;
            --dark-bg: #0f0f0f;
            --sidebar-bg: #141414;
            --card-bg: #1e1e1e;
            --text-muted: #888;
        }

        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Inter', sans-serif;
            margin: 0;
            overflow-x: hidden;
        }

        /* Sidebar Customizada */
        .sidebar {
            position: fixed; top: 0; left: 0; height: 100vh;
            width: var(--sidebar-width); background-color: var(--sidebar-bg);
            border-right: 1px solid #222; z-index: 1001;
            display: flex; flex-direction: column;
        }

        .sidebar-header {
            height: var(--topbar-height); display: flex; align-items: center;
            padding: 0 25px; border-bottom: 1px solid #222;
        }

        .sidebar-menu { flex: 1; overflow-y: auto; padding-top: 20px; }

        .sidebar-menu a {
            display: flex; align-items: center; color: #aaa;
            padding: 12px 25px; text-decoration: none; transition: 0.2s;
            font-size: 0.9rem; font-weight: 500;
        }

        .sidebar-menu a i { font-size: 1.1rem; }

        .sidebar-menu a:hover, .sidebar-menu a.active {
            color: var(--accent-color); background: rgba(255, 193, 7, 0.05);
            box-shadow: inset 4px 0 0 var(--accent-color);
        }

        /* Topbar */
        .topbar {
            position: fixed; top: 0; left: var(--sidebar-width); right: 0;
            height: var(--topbar-height); background-color: rgba(18, 18, 18, 0.8);
            backdrop-filter: blur(10px);
            display: flex; align-items: center; justify-content: space-between;
            padding: 0 30px; border-bottom: 1px solid #222; z-index: 1000;
        }

        .main-content {
            margin-left: var(--sidebar-width); margin-top: var(--topbar-height); 
            padding: 40px; min-height: calc(100vh - var(--topbar-height));
        }

        .campanha-badge {
            background: rgba(255, 193, 7, 0.1); border: 1px solid rgba(255, 193, 7, 0.3);
            color: var(--accent-color); padding: 6px 16px; border-radius: 50px;
            font-size: 0.75rem; font-weight: 700; text-transform: uppercase;
        }

        .user-profile-nav img {
            width: 35px; height: 35px; object-fit: cover; border-radius: 50%;
            border: 2px solid #333;
        }
    </style>
</head>
<body>

    <aside class="sidebar">
        <div class="sidebar-header">
            <span class="text-warning fw-bold fs-5"><i class="bi bi-dice-5-fill me-2"></i>DM CONTROL</span>
        </div>
        
        <div class="sidebar-menu">
            <small class="px-4 text-muted-50 text-uppercase fw-bold mb-2 d-block" style="font-size: 0.65rem;">Principal</small>
            
            <a asp-controller="Admin" asp-action="Index" class="@(currentController == "Admin" && currentAction == "Index" ? "active" : "")">
                <i class="bi bi-speedometer2 me-3"></i> Dashboard
            </a>

            <a asp-controller="Noticia" asp-action="Index" class="@(currentController == "Noticia" ? "active" : "")">
                <i class="bi bi-journal-richtext me-3"></i> Crônicas / Notícias
            </a>

            <a asp-controller="Campanha" asp-action="Index" class="@(currentController == "Campanha" ? "active" : "")">
                <i class="bi bi-layers me-3"></i> Meus Mundos
            </a>

            <div class="mt-4">
                <small class="px-4 text-muted-50 text-uppercase fw-bold mb-2 d-block" style="font-size: 0.65rem;">Sistema</small>
                
                <a asp-controller="Account" asp-action="Index" class="@(currentController == "Account" ? "active" : "")">
                    <i class="bi bi-person-badge me-3"></i> Meu Perfil
                </a>

                <a href="/" target="_blank">
                    <i class="bi bi-eye me-3"></i> Visualizar Site
                </a>
            </div>
        </div>

        <div class="p-3 border-top border-secondary border-opacity-10">
            <a asp-controller="Admin" asp-action="Logout" class="text-danger text-decoration-none d-flex align-items-center px-2 py-2 rounded hover-bg-danger">
                <i class="bi bi-box-arrow-left me-3"></i> <span class="fw-bold">Encerrar Sessão</span>
            </a>
        </div>
    </aside>

    <header class="topbar">
        <div class="d-flex align-items-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item text-muted-50 small">Painel</li>
                    <li class="breadcrumb-item active text-white fw-bold" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>
        
        <div class="d-flex align-items-center gap-3">
            @if (sessaoId.HasValue)
            {
                @* IMPORTANTE: Usamos o ID da campanha da sessão para buscar o nome *@
                var nomeCampanha = Helpers.GetCampaignNameById(sessaoId.Value);
                <div class="campanha-badge">
                    <i class="bi bi-pennant-fill me-1"></i> @nomeCampanha
                </div>
            }

            <div class="user-profile-nav d-flex align-items-center border-start ps-3 border-secondary border-opacity-50">
                <div class="text-end me-3 d-none d-sm-block">
                    <span class="d-block text-white fw-bold small">@AccountObject.Name</span>
                    <span class="text-muted-50" style="font-size: 0.65rem;">@AccountObject.AccountType.ToFriendlyString()</span>
                </div>
                <a asp-controller="Account" asp-action="Index">
                    <img src="@AccountObject.ProfileImageUrl" alt="Perfil">
                </a>
            </div>
        </div>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>