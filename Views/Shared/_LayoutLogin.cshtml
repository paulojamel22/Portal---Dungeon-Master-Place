@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Acesso Restrito</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        :root {
            --dm-gold: #ffc107;
            --dm-dark-bg: #0a0a0a;
            --dm-card-bg: #141414;
            --dm-accent: #8e0000; /* Um toque de vermelho escuro para drama */
        }

        body {
            /* Fundo com imagem de portal desfocada ao fundo ou gradiente profundo */
            background: radial-gradient(circle at center, #1a1a1a 0%, var(--dm-dark-bg) 100%);
            color: #f1f1f1;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        /* Container de Login com Aura */
        .login-card-container {
            width: 100%;
            max-width: 420px;
            padding: 20px;
            animation: fadeIn 0.8s ease-out;
            z-index: 2;
        }

        .login-card {
            background-color: var(--dm-card-bg);
            border: 1px solid rgba(255, 193, 7, 0.15);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 50px rgba(0, 0, 0, 0.8), 
                        0 0 30px rgba(255, 193, 7, 0.03);
            backdrop-filter: blur(10px);
        }

        /* Estilização de Inputs */
        .form-control {
            background-color: #080808 !important;
            border: 1px solid #2a2a2a !important;
            color: #fff !important;
            padding: 12px 15px;
            border-radius: 12px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .form-control:focus {
            border-color: var(--dm-gold) !important;
            box-shadow: 0 0 12px rgba(255, 193, 7, 0.2) !important;
            background-color: #0f0f0f !important;
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--dm-gold) 0%, #eab000 100%);
            border: none;
            color: #000;
            font-weight: 800;
            padding: 14px;
            border-radius: 12px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transition: 0.4s;
        }

        .btn-warning:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(255, 193, 7, 0.3);
            filter: brightness(1.1);
        }

        /* Efeito de Partículas ou Overlay */
        .overlay {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: url('https://www.transparenttextures.com/patterns/dark-matter.png');
            opacity: 0.3;
            z-index: 1;
            pointer-events: none;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .dm-logo-icon {
            font-size: 3.5rem;
            color: var(--dm-gold);
            margin-bottom: 15px;
            display: block;
            text-align: center;
            filter: drop-shadow(0 0 10px rgba(255, 193, 7, 0.5));
        }

        .text-muted { color: #888 !important; }
        
        .btn-back {
            color: #666;
            text-decoration: none;
            font-size: 0.85rem;
            transition: 0.3s;
        }
        .btn-back:hover { color: var(--dm-gold); }
    </style>
</head>
<body>

    <div class="overlay"></div>

    <div class="login-card-container">
        @RenderBody()
        
        <div class="text-center mt-4">
            <a href="/" class="btn-back">
                <i class="bi bi-arrow-left"></i> Voltar ao Multiverso
            </a>
            <p class="text-muted smaller mt-3">
                <i class="bi bi-shield-lock-fill text-warning"></i> Sessão Protegida - DM Place v2.0
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>