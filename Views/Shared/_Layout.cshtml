@using PortalDMPlace.Functions
@inject PortalDMPlace.Functions.HelpersFunctions Helpers
@{
    // Tenta capturar as settings caso estejamos em uma rota de campanha
    var settings = ViewBag.Settings as PortalDMPlace.Models.Settings;
    var dynamicStyle = settings != null ? HelpersFunctions.GetInlineStyle(settings) : "";
    
    // Lista de campanhas para a Navbar dinâmica (opcional, mas recomendado)
    // Para performance, você pode injetar isso via ViewComponent, mas aqui usaremos o Helper direto
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DM Place</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            /* Padrões caso não haja campanha selecionada */
            --primary-color: #f0c040;
            --secondary-color: #dc3545;
            --font-main: 'Segoe UI', Roboto, sans-serif;
            --dm-dark: #0b0b0b;
            
            /* Injeção das variáveis do banco */
            @Html.Raw(dynamicStyle)
        }

        body {
            background-color: var(--dm-dark);
            color: #e0e0e0;
            font-family: var(--font-main);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Navbar Dinâmica */
        .navbar {
            background-color: rgba(17, 17, 17, 0.95) !important;
            backdrop-filter: blur(10px);
            border-bottom: 2px solid var(--primary-color);
            padding: 1rem 0;
            transition: border-color 0.5s ease;
        }

        .navbar-brand {
            color: var(--primary-color) !important;
            font-weight: 800;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .nav-link {
            color: #bbb !important;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 0 5px;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--primary-color) !important;
            transform: translateY(-2px);
        }

        /* Botão GM Customizado */
        .btn-gm {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            border-radius: 50px;
            padding: 0.25rem 1rem;
            transition: 0.3s;
        }
        .btn-gm:hover {
            background-color: var(--primary-color);
            color: #000;
        }

        .main-container { flex: 1; padding-bottom: 60px; }

        footer {
            background-color: #080808;
            border-top: 1px solid #222;
            color: #555;
            font-size: 0.85rem;
        }

        ::-webkit-scrollbar-thumb { background: #333; }
        ::-webkit-scrollbar-thumb:hover { background: var(--primary-color); }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-shield-shaded me-2"></i> DM PLACE
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Início</a>
                        </li>

                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-gm btn-sm" asp-controller="Admin" asp-action="Login">
                                <i class="bi bi-person-lock"></i> GM Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-container">
        @RenderBody()
    </main>

    <footer class="text-center py-4">
        <div class="container">
            <p class="mb-0 small">© @DateTime.Now.Year - Portal Dungeon Master Place</p>
            <span class="small opacity-50">Sistema de Crônicas Dinâmicas v2.0</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>