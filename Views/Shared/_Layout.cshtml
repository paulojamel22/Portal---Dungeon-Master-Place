<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DM Place</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --dm-gold: #f0c040;
            --dm-blood: #dc3545;
            --dm-dark: #0b0b0b;
            --dm-card: #161616;
        }

        body {
            background-color: var(--dm-dark);
            color: #e0e0e0;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Navbar Temática */
        .navbar {
            background-color: rgba(17, 17, 17, 0.95) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #333;
            padding: 1rem 0;
        }

        .navbar-brand {
            color: var(--dm-gold) !important;
            font-weight: 800;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .nav-link {
            color: #bbb !important;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 0 5px;
        }

        .nav-link:hover {
            color: var(--dm-gold) !important;
            transform: translateY(-2px);
        }

        .nav-link.active {
            color: var(--dm-gold) !important;
            border-bottom: 2px solid var(--dm-gold);
        }

        /* Container Principal */
        .main-container {
            flex: 1;
            padding-top: 40px;
            padding-bottom: 60px;
        }

        /* Rodapé */
        footer {
            background-color: #080808;
            border-top: 1px solid #222;
            color: #555;
            font-size: 0.85rem;
        }

        /* Scrollbar Customizada (Estilo Dark) */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #0b0b0b; }
        ::-webkit-scrollbar-thumb { background: #333; border-radius: 10px; }
        ::-webkit-scrollbar-thumb:hover { background: var(--dm-gold); }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-shield-shaded me-2"></i> DM PLACE
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Aetheria" ? "active" : "")" 
                               asp-controller="Aetheria" asp-action="Index">Ecos de Aetheria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Desafio" ? "active" : "")" 
                               asp-controller="Desafio" asp-action="Index">Desafio de Sangue</a>
                        </li>
                        
                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-outline-warning btn-sm px-3 rounded-pill" asp-controller="Admin" asp-action="Login">
                                <i class="bi bi-person-lock"></i> GM Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-container">
        @RenderBody()
    </main>

    <footer class="text-center py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-md-start mb-3 mb-md-0">
                    <span class="fw-bold text-secondary">DUNGEON MASTER PLACE</span>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <p class="mb-0 small">© @DateTime.Now.Year - Crônicas de Aetheria & Desafio de Sangue</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="small">Powered by <strong class="text-warning">ASP.NET Core</strong> em Ubuntu Ampere</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>