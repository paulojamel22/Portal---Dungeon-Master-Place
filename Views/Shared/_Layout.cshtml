@using PortalDMPlace.Functions
@using PortalDMPlace.Enumerators
@inject PortalDMPlace.Functions.HelpersFunctions Helpers
@inject AccountObject AccountObject
@{
    // Captura as configurações da campanha atual para o estilo dinâmico
    var settings = ViewBag.Settings as PortalDMPlace.Models.Settings;
    var dynamicStyle = settings != null ? HelpersFunctions.GetInlineStyle(settings) : "";
    
    // Pegamos a lista de mundos para o menu "Explorar"
    var mundos = await Helpers.GetCampanhasAsync();
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DM Place</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #f0c040;
            --secondary-color: #dc3545;
            --font-main: 'Inter', sans-serif;
            --font-title: 'Cinzel', serif;
            --dm-dark: #0b0b0b;
            --dm-card: #151515;
            
            @Html.Raw(dynamicStyle)
        }

        body {
            background-color: var(--dm-dark);
            color: #e0e0e0;
            font-family: var(--font-main);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h1, h2, h3, .navbar-brand { font-family: var(--font-title); }

        /* Navbar Dinâmica */
        .navbar {
            background-color: rgba(10, 10, 10, 0.9) !important;
            backdrop-filter: blur(12px);
            border-bottom: 2px solid var(--primary-color);
            box-shadow: 0 4px 20px rgba(0,0,0,0.5);
        }

        .navbar-brand {
            color: var(--primary-color) !important;
            font-weight: 700;
            font-size: 1.4rem;
        }

        .nav-link {
            color: #d1d1d1 !important;
            font-size: 0.95rem;
            padding: 0.5rem 1rem !important;
        }

        .nav-link:hover { color: var(--primary-color) !important; }

        /* Estilo do Dropdown de Mundos */
        .dropdown-menu-dark {
            background-color: #111;
            border: 1px solid var(--primary-color);
            border-radius: 8px;
        }
        .dropdown-item:hover { background-color: var(--primary-color); color: #000; }

        /* Avatar na Navbar */
        .nav-profile-img {
            width: 32px;
            height: 32px;
            object-fit: cover;
            border-radius: 50%;
            border: 1px solid var(--primary-color);
        }

        .btn-gm {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            border-radius: 50px;
            font-weight: 600;
            transition: 0.3s;
        }
        .btn-gm:hover { background-color: var(--primary-color); color: #000; }

        .main-container { flex: 1; }

        footer {
            background-color: #050505;
            border-top: 1px solid #1a1a1a;
            color: #666;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-shield-shaded me-2 text-warning"></i>DM PLACE
                </a>
                
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Início</a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropMundos" role="button" data-bs-toggle="dropdown">
                                Explorar Mundos
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                @foreach (var m in mundos)
                                {
                                    <li><a class="dropdown-item" href="/C/@m.NomeSimples">@m.Name</a></li>
                                }
                                @if(!mundos.Any()){
                                    <li><span class="dropdown-item-text text-muted">Nenhum mundo ativo</span></li>
                                }
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (AccountObject.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDrop" role="button" data-bs-toggle="dropdown">
                                    <img src="@AccountObject.ProfileImageUrl" class="nav-profile-img me-2">
                                    <span>@AccountObject.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Painel Geral</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Index"><i class="bi bi-person-circle me-2"></i>Meu Perfil</a></li>
                                    <li><hr class="dropdown-divider border-secondary"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Admin" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-gm btn-sm px-4" asp-controller="Admin" asp-action="Login">
                                    <i class="bi bi-person-lock me-1"></i> Entrar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-container">
        @RenderBody()
    </main>

    <footer class="py-5 mt-5">
        <div class="container text-center">
            <div class="mb-4">
                <i class="bi bi-shield-shaded fs-2 text-warning opacity-50"></i>
            </div>
            <p class="mb-1 text-light">© @DateTime.Now.Year Dungeon Master Place</p>
            <p class="small opacity-50">Forjado para Mestres e Jogadores de RPG</p>
            <div class="mt-3">
                <a href="#" class="text-secondary mx-2"><i class="bi bi-discord"></i></a>
                <a href="#" class="text-secondary mx-2"><i class="bi bi-github"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>