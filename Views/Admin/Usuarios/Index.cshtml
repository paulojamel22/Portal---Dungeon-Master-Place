@model IEnumerable<PortalDMPlace.Models.Account>
@using PortalDMPlace.Enumerators
@{
    ViewData["Title"] = "Gestão de Identidades";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-warning fw-bold mb-0" style="font-family: 'Cinzel', serif;">
                <i class="bi bi-people-fill me-2"></i> Habitantes do Reino
            </h2>
            <a asp-action="CriarUsuario" class="btn btn-warning fw-bold">
                <i class="bi bi-person-plus-fill me-2"></i> FORJAR NOVO HABITANTE
            </a>
            <p class="text-muted">Gerencie as permissões e visualize todos os usuários cadastrados.</p>
        </div>
        <div class="bg-dark p-2 rounded border border-secondary border-opacity-25">
            <span class="text-white-50 small text-uppercase fw-bold">Total: @Model.Count() Almas</span>
        </div>
    </div>

    <div class="card bg-dark border-secondary border-opacity-25 shadow-lg">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle">
                <thead class="bg-black text-warning">
                    <tr class="small text-uppercase">
                        <th class="ps-4 py-3">Usuário</th>
                        <th>Caminho (Tipo)</th>
                        <th>Membro desde</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 bg-gradient-dark text-warning border border-warning border-opacity-25">
                                        @user.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="fw-bold text-white">@user.Name</div>
                                        <div class="small text-muted">@@@user.Username</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @switch (user.AccountType)
                                {
                                    case AccountType.Developer:
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3">
                                            <i class="bi bi-code-slash me-1"></i> Criador
                                        </span>
                                        break;
                                    case AccountType.Administrator:
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3">
                                            <i class="bi bi-shield-fill-check me-1"></i> Soberano
                                        </span>
                                        break;
                                    case AccountType.Master:
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 px-3">
                                            <i class="bi bi-mortarboard-fill me-1"></i> Mestre
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-3">
                                            <i class="bi bi-person-fill me-1"></i> Aventureiro
                                        </span>
                                        break;
                                }
                            </td>
                            <td class="text-muted small">
                                @user.CreatedAt.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-secondary" title="Editar Permissões">
                                        <i class="bi bi-shield-lock"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" title="Banir Usuário" @(user.AccountType == AccountType.Developer ? "disabled" : "")>
                                        <i class="bi bi-slash-circle"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        background: #1a1a1a;
    }
    .table-hover tbody tr:hover {
        background-color: rgba(255, 193, 7, 0.03) !important;
    }
    .badge { font-weight: 600; font-size: 0.75rem; letter-spacing: 0.5px; }
</style>