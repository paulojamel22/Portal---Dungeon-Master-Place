@model PortalDMPlace.Models.Noticia
@{
    ViewData["Title"] = Model.Titulo;
    Layout = "_LayoutAdmin";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-warning">Crônicas</a></li>
            <li class="breadcrumb-item active text-light" aria-current="page">Visualizando</li>
        </ol>
    </nav>

    <div class="card bg-dark text-light shadow-lg border-0 overflow-hidden" style="border-radius: 15px; background: linear-gradient(145deg, #1a1a1a, #121212);">
        
        @if (!string.IsNullOrEmpty(Model.ImagemUrl))
        {
            <div class="position-relative">
                <img src="@Model.ImagemUrl" class="img-fluid w-100" alt="@Model.Titulo" 
                     style="max-height: 450px; object-fit: cover; border-bottom: 3px solid var(--bs-warning);">
                
                <div class="position-absolute top-0 end-0 p-3">
                    <span class="badge bg-warning text-dark fw-bold shadow-sm px-3 py-2">
                        <i class="bi bi-tag-fill me-1"></i> @Model.Categoria
                    </span>
                </div>
            </div>
        }

        <div class="card-body p-4 p-md-5">
            <header class="mb-4">
                <h1 class="display-5 fw-bold text-warning mb-3" style="font-family: 'Cinzel', serif;">@Model.Titulo</h1>
                
                <div class="d-flex flex-wrap gap-3 align-items-center mb-4">
                    <div class="d-flex align-items-center bg-black bg-opacity-25 px-3 py-2 rounded-pill border border-secondary border-opacity-25">
                        <i class="bi bi-person-circle me-2 text-warning"></i>
                        <span class="text-white fw-bold">@Model.Autor</span>
                    </div>
                    <div class="d-flex align-items-center bg-black bg-opacity-25 px-3 py-2 rounded-pill border border-secondary border-opacity-25">
                        <i class="bi bi-calendar3 me-2 text-warning"></i>
                        <span class="text-white-50">@Model.DataPublicacao.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="d-flex align-items-center bg-black bg-opacity-25 px-3 py-2 rounded-pill border border-secondary border-opacity-25">
                        <i class="bi bi-shield-shaded me-2 text-info"></i>
                        <span class="text-info fw-bold">@(Model.Campanha?.Name ?? "Crônica Geral")</span>
                    </div>
                </div>

                <div class="card bg-black bg-opacity-50 border-warning border-opacity-25 shadow-sm" style="border-radius: 10px;">
                    <div class="card-body d-flex align-items-center justify-content-between py-3">
                        <div class="d-flex align-items-center">
                            <div class="spinner-grow spinner-grow-sm text-warning me-3 d-none" id="narrador-status" role="status"></div>
                            <i class="bi bi-mic-fill text-warning fs-4 me-3" id="narrador-icon"></i>
                            <div>
                                <h6 class="mb-0 text-white" style="font-family: 'Cinzel', serif;">Oráculo de Aetheria</h6>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">Sintetizador de Voz Ativo</small>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button onclick="NarradorDMPlace.falar('corpo-cronica', 'Antonio')" class="btn btn-outline-info">
                                Ouvir.
                            </button>
                            <button onclick="NarradorDMPlace.parar()" class="btn btn-outline-danger">
                                <i class="bi bi-stop-circle"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </header>

            <hr class="border-warning opacity-25 mb-5">

            <article id="corpo-cronica" class="news-content">
                @Html.Raw(Model.Conteudo)
            </article>
        </div>

        <div class="card-footer bg-black bg-opacity-50 border-top border-secondary p-4">
            <div class="row align-items-center g-3">
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-outline-light px-4">
                        <i class="bi bi-arrow-left me-2"></i>Voltar à Tabela
                    </a>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="btn-group shadow">
                        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning px-4 fw-bold">
                            <i class="bi bi-pencil-square me-2"></i>Editar Crônica
                        </a>
                        <form asp-action="Excluir" asp-route-id="@Model.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Mestre, os pergaminhos serão incinerados. Confirmar exclusão?')">
                            <button type="submit" class="btn btn-outline-danger px-3">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/scripts/narrador.js"></script>
}

<style>
    /* Estilização Profissional para Conteúdo Dinâmico */
    .news-content {
        color: #d1d1d1;
        line-height: 1.8;
        font-size: 1.15rem;
        word-wrap: break-word;
    }

    .news-content p { margin-bottom: 1.6rem; }
    
    .news-content h2, .news-content h3, .news-content h4 {
        color: #ffc107;
        font-family: 'Cinzel', serif;
        margin-top: 2.5rem;
        margin-bottom: 1.2rem;
    }

    /* ... mantive o restante do seu estilo original ... */
    .news-content img {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        margin: 2rem auto;
        display: block;
        border: 2px solid #333;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .news-content blockquote {
        background: rgba(255, 193, 7, 0.05);
        border-left: 5px solid #ffc107;
        margin: 2rem 0;
        padding: 1.5rem 2rem;
        font-style: italic;
        border-radius: 0 10px 10px 0;
        color: #ffc107;
    }
</style>