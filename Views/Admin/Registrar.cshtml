@model PortalDMPlace.Models.Account
@inject PortalDMPlace.Models.DataContext _context
@{
    ViewData["Title"] = "Convocar Novo Mestre";
    Layout = "_LayoutAdmin"; // Geralmente só quem já é Admin pode registrar outros
    
    var campanhas = _context.Campanhas.ToList();
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card bg-dark border-warning shadow-lg">
                <div class="card-body p-4">
                    <h2 class="text-warning mb-4 text-center">📜 Registrar Novo GM</h2>

                    @if (ViewBag.Erro != null)
                    {
                        <div class="alert alert-danger bg-dark border-danger text-danger small">
                            <i class="bi bi-exclamation-octagon"></i> @ViewBag.Erro
                        </div>
                    }
                    @if (ViewBag.Sucesso != null)
                    {
                        <div class="alert alert-success bg-dark border-success text-success small">
                            <i class="bi bi-check-all"></i> @ViewBag.Sucesso
                        </div>
                    }

                    <form asp-action="Registrar" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-warning fw-bold">Nome de Exibição</label>
                            <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="Ex: Mestre Arcanista" required/>
                            <div class="form-text text-muted small">Este nome aparecerá nas notícias.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label text-warning fw-bold">Usuário de Login</label>
                            <input asp-for="Username" class="form-control bg-dark text-white border-secondary" placeholder="usuario123" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-warning fw-bold">Senha Inicial</label>
                            <input asp-for="Password" type="password" class="form-control bg-dark text-white border-secondary" placeholder="••••••••" required />
                        </div>

                        <div class="mb-4">
                            <label asp-for="CampanhaId" class="form-label text-warning fw-bold">Vincular à Campanha Primária</label>
                            <select asp-for="CampanhaId" class="form-select bg-dark text-white border-secondary" required>
                                <option value="">Selecione a crônica...</option>
                                @foreach (var camp in campanhas)
                                {
                                    <option value="@camp.Id">@camp.Name</option>
                                }
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning fw-bold text-dark">
                                <i class="bi bi-person-plus-fill"></i> Criar Conta de GM
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}