@model IEnumerable<PortalDMPlace.Models.Campanha>
@{
    ViewData["Title"] = "Campanhas";
    Layout = "_LayoutAdmin";
}

<div class="container py-4">
    <h2 class="text-warning text-center mb-4">🎯 Campanhas</h2>

    <div class="text-end mb-3">
        <a asp-action="CriarCampanha" class="btn btn-outline-warning">
            ➕ Nova Campanha
        </a>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success">@TempData["Sucesso"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">Nenhuma campanha cadastrada.</div>
    }
    else
    {
        <table class="table table-dark table-hover align-middle border border-warning">
            <thead class="table-warning text-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Nome Simples</th>
                    <th>Descrição</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Name</td>
                        <td>@c.NomeSimples</td>
                        <td>@c.Description</td>
                        <td class="text-end">
                            <a asp-action="EditarCampanha" asp-route-id="@c.Id" class="btn btn-sm btn-outline-light me-2">✏️ Editar</a>
                            <a asp-action="DeletarCampanha" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger">🗑️ Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
