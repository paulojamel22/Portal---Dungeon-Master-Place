@model IEnumerable<PortalDMPlace.Models.Campanha>
@{
    ViewData["Title"] = "Configurações do Reino";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning mb-0"><i class="bi bi-gear-wide-connected me-2"></i> Configurações de Integração</h2>
        <span class="badge bg-dark border border-secondary text-muted">Servidor: Ubuntu Ampere</span>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success bg-dark border-success text-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark border-bottom border-secondary py-3">
                    <h5 class="mb-0 text-warning"><i class="bi bi-discord me-2"></i> Webhooks do Discord</h5>
                    <small class="text-muted">Configure para onde as notificações de novas crônicas serão enviadas.</small>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle">
                            <thead>
                                <tr class="text-muted small text-uppercase">
                                    <th>Campanha</th>
                                    <th>Status</th>
                                    <th>Webhook URL</th>
                                    <th class="text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var campanha in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">@campanha.Name</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(campanha.DiscordWebhookUrl))
                                            {
                                                <span class="badge bg-success-subtle text-success border border-success">Ativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger-subtle text-danger border border-danger">Inativo</span>
                                            }
                                        </td>
                                        <td class="text-muted small">
                                            @if (!string.IsNullOrEmpty(campanha.DiscordWebhookUrl))
                                            {
                                                <span>@(campanha.DiscordWebhookUrl.Substring(0, Math.Min(campanha.DiscordWebhookUrl.Length, 30)))...</span>
                                            }
                                            else
                                            {
                                                <em>Nenhum configurado</em>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-warning" 
                                                    onclick="openWebhookModal('@campanha.Id', '@campanha.Name', '@campanha.DiscordWebhookUrl')">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </button>
                                            @if (!string.IsNullOrEmpty(campanha.DiscordWebhookUrl))
                                            {
                                                <button class="btn btn-sm btn-outline-info" onclick="testarConexao('@campanha.Id')">
                                                    <i class="bi bi-broadcast"></i> Testar
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="alert bg-warning bg-opacity-10 border border-warning text-warning d-flex align-items-center">
                <i class="bi bi-shield-lock-fill fs-3 me-3"></i>
                <div>
                    <strong>Dica do Mestre:</strong> Estes Webhooks são armazenados apenas no seu banco de dados local (SQLite/PostgreSQL) no servidor Ubuntu. Nunca os commite no arquivo <code>appsettings.json</code> se for subir para o GitHub.
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card bg-dark border-secondary">
                <div class="card-header border-bottom border-secondary">
                    <h5 class="text-info mb-0"><i class="bi bi-info-circle me-2"></i> Status da Forja</h5>
                </div>
                <div class="card-body small">
                    <ul class="list-group list-group-flush bg-transparent">
                        <li class="list-group-item bg-transparent text-light border-secondary d-flex justify-content-between">
                            <span>Versão do Portal:</span>
                            <span class="text-muted">v2.1.0-2026</span>
                        </li>
                        <li class="list-group-item bg-transparent text-light border-secondary d-flex justify-content-between">
                            <span>Banco de Dados:</span>
                            <span class="text-success">Conectado</span>
                        </li>
                        <li class="list-group-item bg-transparent text-light border-secondary d-flex justify-content-between">
                            <span>Ambiente:</span>
                            <span class="badge bg-primary">Produção</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="webhookModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark border-warning shadow-lg">
            <form asp-action="SalvarWebhook" method="post">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-warning" id="modalTitle">Configurar Webhook</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="campanhaId" />
                    <div class="mb-3">
                        <label class="form-label text-light">URL do Webhook do Discord</label>
                        <input type="url" name="webhookUrl" id="webhookUrl" class="form-control bg-black text-white border-secondary" placeholder="https://discord.com/api/webhooks/..." required />
                        <div class="form-text text-muted">Cole o link completo gerado no canal do seu servidor.</div>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning fw-bold">Salvar Configuração</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openWebhookModal(id, nome, url) {
            document.getElementById('campanhaId').value = id;
            document.getElementById('modalTitle').innerText = 'Webhook: ' + nome;
            document.getElementById('webhookUrl').value = url;
            new bootstrap.Modal(document.getElementById('webhookModal')).show();
        }

        function testarConexao(id) {
            fetch(`/Admin/TestarWebhook/${id}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                });
        }
    </script>
}