@model IEnumerable<PortalDMPlace.Models.Campanha>
@inject PortalDMPlace.Functions.HelpersFunctions Helpers
@{
    ViewData["Title"] = "Portais do DM Place";
}

<style>
    .portal-title { font-family: 'Georgia', serif; letter-spacing: 2px; text-transform: uppercase; }

    .card-portal {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border-width: 2px;
        overflow: hidden;
        background-color: #0d0d0d !important;
        border-color: var(--primary-color) !important;
    }

    .card-portal:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 0 30px var(--glow-color) !important;
    }

    .img-portal {
        height: 280px;
        object-fit: cover;
        filter: grayscale(40%) brightness(0.7);
        transition: all 0.5s ease;
    }

    .card-portal:hover .img-portal {
        filter: grayscale(0%) brightness(1);
        transform: scale(1.05);
    }

    .btn-portal {
        background-color: var(--primary-color);
        color: white;
        border: none;
        transition: 0.3s;
    }

    .btn-portal:hover {
        background-color: var(--secondary-color);
        color: white;
        filter: brightness(1.2);
    }

    .bg-overlay-gradient {
        background: linear-gradient(to bottom, transparent, rgba(0,0,0,1) 80%);
        margin-top: -80px;
        padding-top: 40px;
        position: relative;
        z-index: 2;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5 mt-4">
        <h1 class="text-warning portal-title display-3 fw-bold mb-2" style="text-shadow: 0 0 15px rgba(255, 215, 0, 0.3);">
            🌌 PORTAIS INTERPLANARES
        </h1>
        <p class="text-muted fs-5">O destino de mil mundos converge aqui. Escolha sua crônica.</p>
    </div>

    <div class="row justify-content-center g-5">
        @foreach (var campanha in Model)
        {
            // Buscamos as configurações de cada campanha via Helper
            var settings = await Helpers.GetSettingsAsync(campanha.Id);
            
            <div class="col-md-5">
                @* Definimos variáveis CSS locais para este card específico *@
                <div class="card card-portal h-100 rounded-4 shadow-lg" 
                     style="--primary-color: @settings.TemaCorPrimaria; 
                            --secondary-color: @settings.TemaCorSecundaria; 
                            --glow-color: @(settings.TemaCorPrimaria)66;"> @* O '66' adiciona transparência ao Hex *@
                    
                    <div class="overflow-hidden">
                        <img src="@settings.CardThumbnailUrl" 
                             class="card-img-top img-portal" 
                             alt="@campanha.Name"
                             onerror="this.src='/img/default_portal.png'">
                    </div>

                    <div class="card-body d-flex flex-column bg-overlay-gradient">
                        <h2 class="card-title portal-title h3 mb-3" style="color: @settings.TemaCorPrimaria">
                             @campanha.Name
                        </h2>
                        
                        <p class="card-text text-light opacity-75 flex-grow-1">
                            @settings.ChamadaCard
                        </p>
                       
                        <div class="mt-4">
                            <a href="C/@campanha.NomeSimples" class="btn btn-portal w-100 fw-bold py-3 rounded-pill shadow">
                                <i class="bi bi-door-open-fill me-2"></i> Atravessar Portal
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>