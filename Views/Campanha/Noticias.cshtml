@model IEnumerable<PortalDMPlace.Models.Noticia>
@using PortalDMPlace.Functions
@{
    var settings = ViewBag.Settings as PortalDMPlace.Models.Settings ?? new PortalDMPlace.Models.Settings();
    var campanha = ViewBag.Campanha as PortalDMPlace.Models.Campanha;
    
    var dynamicStyle = HelpersFunctions.GetInlineStyle(settings);
    ViewData["Title"] = campanha?.Name ?? "Crônicas";
}

<style>
    :root { @Html.Raw(dynamicStyle) }

    /* Banner Épico com Parallax Suave */
    .campanha-banner {
        background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(11,11,11,1) 100%), url('@settings.BannerUrl');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 50vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        text-align: center;
        padding: 2rem;
    }

    .banner-title {
        font-family: var(--font-title, 'Cinzel', serif);
        font-size: 4rem;
        text-shadow: 0 0 20px rgba(0,0,0,0.8), 0 0 10px var(--primary-color);
        color: #fff;
        margin-bottom: 0.5rem;
    }

    /* Cards de Crônicas */
    .card-noticia {
        background-color: #121212 !important;
        border: 1px solid rgba(255,255,255,0.05) !important;
        border-top: 3px solid var(--primary-color) !important;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        overflow: hidden;
    }

    .card-noticia:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border-top-color: var(--secondary-color) !important;
    }

    .img-noticia-wrapper {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .img-noticia {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
        opacity: 0.8;
    }

    .card-noticia:hover .img-noticia {
        transform: scale(1.1);
        opacity: 1;
    }

    .date-badge {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: rgba(0,0,0,0.7);
        backdrop-filter: blur(5px);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        border: 1px solid var(--primary-color);
    }

    .btn-ler {
        background: transparent;
        border: 1px solid var(--primary-color);
        color: var(--primary-color);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.8rem;
        transition: all 0.3s;
    }

    .btn-ler:hover {
        background: var(--primary-color);
        color: #000;
        box-shadow: 0 0 15px var(--primary-color);
    }

    .lore-summary {
        font-size: 0.9rem;
        color: #bbb;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<header class="campanha-banner">
    <div class="container">
        @if(campanha != null)
        {
            <h1 class="banner-title">@campanha.Name</h1>
        }
        <p class="lead text-white-50 mx-auto" style="max-width: 700px; font-style: italic;">
            "@settings.ChamadaCard"
        </p>
        <div class="mt-4">
            <span class="badge rounded-pill px-3 py-2" style="background: var(--primary-color); color: #000;">
                <i class="bi bi-feather me-2"></i> @Model.Count() Crônicas Registradas
            </span>
        </div>
    </div>
</header>

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-5">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a href="/" class="text-muted text-decoration-none">Multiverso</a></li>
            <li class="breadcrumb-item active text-warning" aria-current="page">@campanha?.Name</li>
        </ol>
    </nav>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-journal-x display-1 text-muted opacity-25"></i>
                <p class="mt-3 text-muted">As páginas deste mundo ainda estão em branco...</p>
            </div>
        }

        @foreach (var noticia in Model)
        {
            <div class="col-lg-4 col-md-6">
                <article class="card card-noticia h-100 shadow-lg">
                    <div class="img-noticia-wrapper">
                        <img src="@(string.IsNullOrEmpty(noticia.ImagemUrl) ? "/img/default_lore.jpg" : noticia.ImagemUrl)" 
                             class="img-noticia" alt="@noticia.Titulo">
                        <div class="date-badge text-warning">
                            <i class="bi bi-calendar3 me-1"></i> @HelpersFunctions.FormatLoreDate(noticia.DataPublicacao)
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column p-4">
                        <h4 class="card-title fw-bold mb-3" style="color: var(--primary-color); font-family: var(--font-title, serif);">
                            @noticia.Titulo
                        </h4>
                        
                        <p class="card-text lore-summary flex-grow-1">
                            @* Aqui você pode colocar um resumo da notícia se tiver o campo *@
                            @noticia.Conteudo.Substring(0, Math.Min(noticia.Conteudo.Length, 120))...
                        </p>
                        
                        <div class="mt-4 pt-3 border-top border-secondary border-opacity-10">
                            <a asp-controller="Campanha" asp-action="Detalhes" asp-route-slug="@campanha?.NomeSimples" asp-route-id="@noticia.Id" 
                               class="btn btn-ler w-100 py-2">
                                <i class="bi bi-book-half me-2"></i> Abrir Relato
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        }
    </div>
</div>