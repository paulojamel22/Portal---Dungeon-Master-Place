@model PortalDMPlace.Models.Noticia
@{
    ViewData["Title"] = Model.Titulo;
    Layout = "_Layout"; // Garantindo o uso do layout principal do portal
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <div class="mb-4">
                <a asp-controller="Aetheria" asp-action="Index" class="text-warning text-decoration-none small fw-bold">
                    <i class="bi bi-chevron-left"></i> VOLTAR PARA AS CRÔNICAS
                </a>
            </div>

            <article class="card bg-dark text-light border-0 shadow-lg overflow-hidden" style="border-radius: 20px;">
                
                @* Banner de Capa *@
                <div class="position-relative">
                    @{
                        var imgSrc = !string.IsNullOrEmpty(Model.ImagemUrl) ? Model.ImagemUrl : "/img/default.png";
                    }
                    <img src="@imgSrc" class="img-fluid w-100" alt="@Model.Titulo" 
                         style="max-height: 500px; object-fit: cover; filter: brightness(0.9);">
                    
                    @* Overlay para dar destaque ao título se necessário *@
                    <div class="position-absolute bottom-0 start-0 w-100 p-4 bg-gradient-to-top">
                        <span class="badge bg-warning text-dark px-3 py-2 mb-2">@Model.Categoria</span>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <header class="text-center mb-5">
                        <h1 class="display-4 fw-bold text-warning mb-3">@Model.Titulo</h1>
                        <div class="d-flex justify-content-center align-items-center text-muted gap-3">
                            <span><i class="bi bi-person-fill text-warning me-1"></i> @Model.Autor</span>
                            <span class="vr"></span>
                            <span><i class="bi bi-calendar-event me-1"></i> @Model.DataPublicacao.ToString("dd/MM/yyyy HH:mm")</span>
                            <span class="vr"></span>
                            <span class="text-info">@Model.Campanha?.Name</span>
                        </div>
                    </header>

                    <hr class="border-warning opacity-25 mb-5">

                    <div class="news-content fs-5 px-md-4">
                        @Html.Raw(Model.Conteudo)
                    </div>

                    <footer class="mt-5 pt-5 border-top border-secondary border-opacity-25 text-center">
                        <p class="text-muted italic small">Fim deste registro nos anais de Aetheria.</p>
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                                <i class="bi bi-printer"></i> Imprimir Relato
                            </button>
                            <a href="#" class="btn btn-sm btn-outline-warning" onclick="copyUrl()">
                                <i class="bi bi-share"></i> Compartilhar Link
                            </a>
                        </div>
                    </footer>
                </div>
            </article>
        </div>
    </div>
</div>

<style>
    /* Estilização do Conteúdo HTML Dinâmico */
    .news-content {
        line-height: 1.8;
        letter-spacing: 0.02rem;
        color: #e0e0e0;
    }
    .news-content p { margin-bottom: 1.8rem; }
    .news-content h2, .news-content h3 { 
        color: #ffc107; 
        margin-top: 2.5rem; 
        margin-bottom: 1.2rem;
        font-weight: bold;
    }
    .news-content img { 
        max-width: 100%; 
        height: auto; 
        border-radius: 12px; 
        margin: 2rem 0;
        border: 1px solid rgba(255, 193, 7, 0.2);
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }
    .news-content blockquote {
        background: rgba(255, 255, 255, 0.05);
        border-left: 5px solid #ffc107;
        padding: 1.5rem 2rem;
        margin: 2rem 0;
        font-style: italic;
        border-radius: 0 10px 10px 0;
    }
    .bg-gradient-to-top {
        background: linear-gradient(transparent, rgba(0,0,0,0.8));
    }
</style>

<script>
    function copyUrl() {
        navigator.clipboard.writeText(window.location.href);
        alert("Link da crônica copiado para a área de transferência!");
    }
</script>