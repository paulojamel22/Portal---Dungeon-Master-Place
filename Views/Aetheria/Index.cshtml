@model IEnumerable<PortalDMPlace.Models.Noticia>
@{
    var categorias = ViewBag.Categorias as List<string> ?? new List<string>();
    ViewData["Title"] = ViewBag.NomeCampanha ?? "Ecos de Aetheria";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-warning fw-bold mb-3" style="text-shadow: 2px 2px 10px rgba(255, 193, 7, 0.3);">
            🌒 @(ViewBag.NomeCampanha ?? "Ecos de Aetheria")
        </h1>
        <p class="text-light fs-5 mx-auto" style="max-width: 700px; opacity: 0.8;">
            Rumores, descobertas e ecos das aventuras que moldam o destino de Aetheria. 
            Mantenha-se atento aos sinais dos deuses.
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert bg-dark text-warning text-center py-5 border border-warning border-opacity-25 rounded-4 shadow">
            <i class="bi bi-wind fs-1 mb-3 d-block"></i>
            <p class="fs-5 mb-0">Nenhuma notícia publicada ainda. O véu do silêncio cobre Aetheria...</p>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center mb-5">
            <div class="input-group shadow-sm" style="max-width: 350px;">
                <label class="input-group-text bg-warning text-dark border-warning fw-bold" for="filtroCategoria">
                    <i class="bi bi-filter"></i>
                </label>
                <select id="filtroCategoria" class="form-select bg-dark text-light border-warning focus-ring focus-ring-warning">
                    <option value="">Todas as Crônicas</option>
                    @foreach (var cat in categorias)
                    {
                        <option value="@cat">@cat</option>
                    }
                </select>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            @foreach (var n in Model)
            {
                <div class="col-sm-12 col-md-6 col-lg-4 card-noticia" data-categoria="@n.Categoria">
                    <div class="card bg-dark text-light border border-warning border-opacity-25 shadow-lg h-100 transition-hover rounded-4 overflow-hidden">
                        
                        @* Renderização da Imagem de Capa *@
                        <div class="position-relative">
                            @{
                                // Verificação simplificada para produção (URL relativa ou default)
                                var imgSrc = !string.IsNullOrEmpty(n.ImagemUrl) ? n.ImagemUrl : "/img/default.jpg";
                            }
                            <img src="@imgSrc" class="card-img-top" alt="@n.Titulo" 
                                 style="height: 220px; object-fit: cover;">
                            
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning text-dark shadow-sm">@n.Categoria</span>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <h4 class="card-title text-warning fw-bold mb-3">@n.Titulo</h4>

                            <div class="d-flex align-items-center text-muted small mb-3">
                                <i class="bi bi-person-circle me-2 text-warning"></i>
                                <span>@n.Autor</span>
                                <span class="mx-2">•</span>
                                <i class="bi bi-calendar3 me-2"></i>
                                <span>@n.DataPublicacao.ToString("dd/MM/yyyy")</span>
                            </div>

                            <p class="card-text flex-grow-1 text-secondary" style="font-size: 0.95rem; line-height: 1.6;">
                                @n.GetResumo(150)
                            </p>

                            <div class="mt-4">
                                <a asp-controller="Aetheria" asp-action="Detalhes" asp-route-id="@n.Id"
                                   class="btn btn-warning w-100 fw-bold text-dark rounded-pill py-2">
                                    Explorar Crônica
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Navegação das Crônicas" class="mt-5">
            <ul class="pagination pagination-md justify-content-center">
                <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                    <a class="page-link bg-dark text-warning border-warning border-opacity-50"
                       asp-action="Index" asp-route-page="@(ViewBag.Page - 1)">
                       <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                        <a class="page-link @(ViewBag.Page == i ? "bg-warning text-dark border-warning" : "bg-dark text-warning border-warning border-opacity-50")"
                           asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link bg-dark text-warning border-warning border-opacity-50"
                       asp-action="Index" asp-route-page="@(ViewBag.Page + 1)">
                       <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

<style>
    .transition-hover {
        transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .transition-hover:hover {
        transform: translateY(-8px);
        border-color: #ffc107 !important;
        box-shadow: 0 10px 20px rgba(255, 193, 7, 0.2) !important;
    }
    .card-noticia {
        transition: opacity 0.4s ease;
    }
</style>

<script>
    document.getElementById("filtroCategoria").addEventListener("change", function() {
        const valor = this.value.toLowerCase();
        document.querySelectorAll(".card-noticia").forEach(card => {
            const categoria = card.getAttribute("data-categoria").toLowerCase();
            if (valor === "" || categoria === valor) {
                card.style.display = "block";
                setTimeout(() => card.style.opacity = "1", 10);
            } else {
                card.style.opacity = "0";
                setTimeout(() => card.style.display = "none", 400);
            }
        });
    });
</script>